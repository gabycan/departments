<p id="notice"><%= notice %></p>
<% if flash[:building_destroy_error] %>
  <p><%= flash[:building_destroy_error] %></p>
<% end %>

<h1>
  <i class="bi bi-building"></i>
  Buildings
</h1>

<div class="container">
  <div class="row">
    <div class="col-lg-11">
      <table>
        <thead>
          <tr>
            <th class="text-center">Name</th>
            <th class="text-center">Address</th>
            <th class="text-center">City</th>
            <th class="text-center">Quantity</th>
            <th colspan="3" class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @buildings.each do |building| %>
            <tr>
              <td><%= building.name %></td>
              <td><%= building.address %></td>
              <td><%= building.city %></td>
              <td class="text-center"><%= building.apartments.count %></td>
              <td><%= link_to 'Show', building %></td>
              <td><%= link_to 'Edit', edit_building_path(building) %></td>
              <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<div class="col-lg-2">
  <%= link_to 'New Building', new_building_path, class: 'btn btn-warning text-white' %>
</div>
